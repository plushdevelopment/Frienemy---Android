<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="3" >

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1.5"
            android:background="#E1E1E1" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="John Doe"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="#ffffff" android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#E1E1E1"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:background="#000000">
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:orientation="vertical"
                android:background="#000000" android:layout_alignParentTop="true">
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#000000" android:layout_alignParentLeft="true">
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#000000" android:layout_alignParentRight="true">
            </LinearLayout>
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1.5" >

            <TextView
                android:id="@+id/relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="Relationship Status: "
                android:textColor="#000000" android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/frienemy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relationship"
                android:text="Friend Status: "
                android:textColor="#000000" android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/About"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/frienemy"
                android:text="About: "
                android:textColor="#000000" android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/Employer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/About"
                android:text="Employer: "
                android:textColor="#000000" android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Employer"
                android:text="Phone: "
                android:textColor="#000000" android:layout_marginLeft="5dp" android:phoneNumber="true"/>

            <TextView
                android:id="@+id/ScreenName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Phone"
                android:text="Screen Name: "
                android:textColor="#000000" android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/ScreenName"
                android:text="Email:"
                android:textColor="#000000" android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Info"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"/>

        </RelativeLayout>

    </LinearLayout>
