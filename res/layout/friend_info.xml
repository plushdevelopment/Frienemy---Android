<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:weightSum="3" >

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1.5"
            android:background="#000000" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="John Doe"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="#000000" android:layout_marginBottom="10dp">

     
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#000000" android:layout_centerVertical="true" android:layout_centerHorizontal="true" android:layout_marginTop="20dip"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:background="#D1D1D5">
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:orientation="vertical"
                android:background="#000000" android:layout_alignParentTop="true">
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#000000" android:layout_alignParentLeft="true">
            </LinearLayout>
            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#000000" android:layout_alignParentRight="true">
            </LinearLayout>
            
        </RelativeLayout>

            <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_weight="1.5"
            android:background="#000000"
            android:layout_alignTop="@+id/textView1"
            android:layout_toRightOf="@+id/About">
            
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="10dip" android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:text="Relationship Status: "
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/frienemy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relationship"
                android:layout_marginLeft="5dp"
                android:text="Friend Status: "
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/quotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/frienemy"
                android:layout_marginLeft="5dp"
                android:text="Quotes: "
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/Birthdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/quotes"
                android:layout_marginLeft="5dp"
                android:text="Birthdate: "
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/Religion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Birthdate"
                android:layout_marginLeft="5dp"
                android:text="Religion: "
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/About"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Religion"
                android:layout_marginLeft="5dp"
                android:text="About: "
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/Hometown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/About"
                android:layout_marginLeft="5dp"
                android:text="Hometown: "
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Hometown"
                android:layout_marginLeft="5dp"
                android:text="Email:"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Info"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:textStyle="bold" />

            

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                </LinearLayout>
           
        </RelativeLayout>
         </ScrollView>

    </LinearLayout>
